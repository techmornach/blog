generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model views {
  _id   ObjectId @id
  slug  String   @unique
  count BigInt   @default(1)
}

model guestbook {
  _id        ObjectId @id
  email      String
  body       String
  created_by String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
