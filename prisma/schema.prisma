generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model views {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  slug  String   @unique
  count BigInt   @default(1)
}

model guestbook {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  body       String
  created_by String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
